model User {
  id            String     @id @default(cuid())
  email         String     @unique
  name          String?
  image         String?
  emailVerified  DateTime?
  currency      String     @default("JPY")  // è‡ªå®šä¹‰å­—æ®µ
  monthlyBudget Int?                        // è‡ªå®šä¹‰å­—æ®µ
  expenses      Expense[]
  categories    Category[]
  createdAt     DateTime   @default(now())
  defaultRedirectPath String?
  subscriptions Subscription[]

  // ğŸ”¹ NextAuth éœ€è¦çš„å­—æ®µ
  accounts      Account[]
